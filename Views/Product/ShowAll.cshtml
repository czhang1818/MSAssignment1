@model IEnumerable<ProductCatalog.Models.Product>
@{
    ViewData["Title"] = "ShowAll";
}

<div>
<h1>Our Products</h1>
    <table class="table table-hover table-striped">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Details</th>
        </tr>        
        @foreach (var item in Model)
        {
            <tr class="align-middle">
            <td>@item.Id</td>
            <td>@item.ProductName</td>
            <td>@item.ProductPrice</td>
            <td><img src="@item.ImageUrl" style="width: 100px; height: 100px; object-fit: contain"/></td>
            <td><a href="/Product/ShowById/?id=@item.Id">Details</a></td>
            </tr>
        }        
    </table>
</div>
