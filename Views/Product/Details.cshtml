@model ProductCatalog.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Product Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">Product Price</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">Product Image</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
            <br />
            <img src="@Model.ImageUrl" alt="@Model.ProductName"
                 style="max-width: 300px; max-height: 300px;"
                 class="img-thumbnail" />
        </dd>
        <dt class = "col-sm-2">Product Description</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">Category</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
