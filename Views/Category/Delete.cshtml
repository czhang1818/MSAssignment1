@model ProductCatalog.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Category</h1>

<h3>Are you sure you want to delete this category?</h3>
<div>
    @if (Model.Products.Any())
    {
        <h3 class="bg-danger-subtle text-center text-primary">
            The products under this category will be deleted at the same time!
        </h3>
    }
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Category ID</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">Category Name</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">Products</dt>
        <dd class="col-sm-10">
            @if (!Model.Products.Any())
            {
                <p>No products in this category.</p>
            }
            else
            {
                <ul>
                    @foreach (var product in Model.Products)
                    {
                        <li>Product Id @product.Id - @product.ProductName</li>
                    }
                </ul>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
